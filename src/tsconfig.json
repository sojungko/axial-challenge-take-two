{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",  // npm install commonjs
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2016",
      "es2015",
      "dom"
    ],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "types": ["node"], // necessary
    "typeRoots": [      
      "./node_modules/@types" // necessary
    ]
  }
}